@model Plant_Paradise.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/AdminLAyout.cshtml";
}

<h3 style="text-align:center;color:red;">@ViewBag.Error</h3>
<br />
<br />
<br />
@using (Html.BeginForm("Create", "CategoriesAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="edit-product-form">
        <h2>Add Category</h2>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.LabelFor(model => model.Category_Name, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.Category_Name, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
        @Html.ValidationMessageFor(model => model.Category_Name, "", new { @class = "text-danger" })


        @Html.LabelFor(model => model.Category_Image, htmlAttributes: new { @class = "control-label col-md-2" })
        <input class="form-control text-box single-line" id="Category_Image" name="Category_Image" type="file"  accept="image/*" required/>
        @Html.ValidationMessageFor(model => model.Category_Image, "", new { @class = "text-danger" })

        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}
<script>
    var paragraph = document.getElementById("Categories");
    paragraph.classList.add("active");
</script>