@model  Plant_Paradise.Models.AspNetUser

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/UserLayout12.cshtml";
}

<style>
    .list-group-item.active {
        background-color: #F28123 !important;
        border-color: #F28123 !important;
    }

    .search {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
    }

    .serchbutton {
        display: flex;
        justify-content: baseline;
        align-items: center;
    }
</style>

<div class="contact-from-section mt-150 mb-150">

    <section class="ftco-section contact-section">
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-5 col-xl-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">My Profile</h5>
                            <p>@TempData["Error"]</p>
                        </div>

                        <div class="list-group list-group-flush" role="tablist">
                            <a class="list-group-item list-group-item-action active" data-toggle="list" href="#account"
                               role="tab">
                                My info
                            </a>

                            <a class="list-group-item list-group-item-action" data-toggle="list" href="#Notifications" role="tab">
                                My Orders
                            </a>




                        </div>
                    </div>
                </div>

                <div class="col-md-7 col-xl-8">
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="account" role="tabpanel">



                            <div class="card">
                                <div class="card-header">
                                    <div class="card-actions float-right">

                                    </div>
                                    <div class="card-title mb-0">My info</div>
                                </div>
                                <div class="card-body">
                                    @using (Html.BeginForm("EditProfile", "UserProfile", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        <h3>@ViewBag.Error</h3><div class="single-testimonial-slider " style="display:flex;flex-direction:column;justify-content:center;align-items:center">
                                            <div class="client-avater">
                                                @if (Model.User_Image != null)
                                                {
                                                    <img src="~/Images/@Model.User_Image" alt="@Model.Full_Name Image" style="width:120px;height:120px;">
                                                }
                                                else
                                                {
                                                    <img src="~/Images/default_USerImage.jpg" alt="@Model.Full_Name Image">

                                                }
                                            </div>
                                            <div class="client-meta">
                                                <h3>@Model.Full_Name</h3>
                                            </div>
                                        </div>

                                        <div class="form-row">
                                            <label for="inputName">Name</label>
                                            <input type="text" class="form-control" id="inputName"
                                                   value="@Model.Full_Name" name="name">

                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail4">Email</label>
                                            <input type="email" class="form-control" readonly id="inputEmail4" value="@Model.Email" name="email">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputAddress">Address</label>
                                            <input type="text" class="form-control" id="inputAddress"
                                                   value="@Model.User_Address" name="address">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputAddress">Phone Number</label>
                                            <input type="tel" class="form-control" id="inputAddress"
                                                   value="@Model.Phone_Number" name="phone">
                                        </div>


                                        <div class="form-group">
                                            <label for="inputAddress">Image</label>
                                            <input type="file" class="form-control" id="user_image"
                                                   name="user_image" accept="image/*">
                                        </div>



                                        <input style=" font-family: 'Poppins' , sans-serif !important; display: inline-block !important; padding: 10px 20px !important;" class="boxed-btn" type="submit" value="Save Change" />

                                    }

                                </div>
                            </div>

                        </div>
                        @Html.Action("Oreder_User")
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>
